{
  "name": "screen-cover",
  "version": "0.3.7",
  "description": "Animation component for navigating between pages",
  "keywords": [
    "react",
    "ui",
    "component",
    "cover",
    "animation"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shelchkov/screen-cover.git"
  },
  "author": "shelchkov",
  "private": false,
  "scripts": {
    "start": "react-scripts start",
    "lint:fix": "npm run lint -- --fix",
    "build": "REACT_APP_TAG_NAME=$npm_package_version react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package:build": "npm run copy-css && npm run compile:ts",
    "prepackage:build": "rm -rf dist",
    "copy-css": "mkdir dist && mkdir dist/styles && cp -r ./src/lib/styles/ ./dist/styles/",
    "compile:ts": "tsc --project tsconfig.build.json",
    "lint": "npx eslint src/**/*.{tsx,ts}",
    "typecheck": "tsc",
    "postversion": "git push && git push --tags"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0",
    "react-scripts": ">=3.1.2"
  }
}
