{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
